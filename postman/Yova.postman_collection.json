							"});\r",
							"pm.test(\"Response has a JSON body\", function () {\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"pm.test(\"Response is in correct format\", function () {\r",
							"    var data = pm.response.json();\r",
							"    pm.expect(data[0].age).to.be.a('number');\r",
							"    pm.expect(data[0].id).to.be.a('number');\r",
							"    pm.expect(data[0].first_name).to.be.a('string');\r",
							"    pm.expect(data[0].last_name).to.be.a('string');\r",
							"    pm.expect(data[0].created_at).to.be.a('string');\r",
							"});"
