							"pm.test(\"Response has a JSON body\", function () {\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"pm.test(\"Has correct first name\", function () {\r",
							"    var data = pm.response.json();\r",
							"    pm.expect(data.first_name).to.equal(pm.environment.get(\"firstName\"));\r",
							"});\r",
							"pm.test(\"Has correct last name\", function () {\r",
