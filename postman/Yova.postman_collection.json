							"pm.test(\"Has correct email\", function () {\r",
							"    var data = pm.response.json();\r",
							"    pm.expect(data.email).to.equal(pm.environment.get(\"email\"));\r",
							"});\r",
							"pm.test(\"Has correct age\", function () {\r",
							"    var data = pm.response.json();\r",
							"    pm.expect(data.age).to.equal(parseInt(pm.environment.get(\"age\")));\r",
							"});"
